@model IEnumerable<JM_MVC.Models.Balero>

@{
    ViewData["Title"] = "Index";
}

<h1>Baleros</h1>
<br />
<p>
    <a class="btn btn-outline-success" asp-action="Create">
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
  <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
</svg>
Crear Nuevo Registro</a>
</p>
<table class="table table-hover" id="tabla">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
               ($) @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreate)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreate)
            </td>
            <td>
                <a class="btn btn-success btn-m" asp-action="Edit" asp-route-id="@item.IdBaleros">Editar</a> |
                <a class="btn btn-outline-info btn-m" asp-action="Details" asp-route-id="@item.IdBaleros">Details</a> |
                <a class="btn btn-outline-danger btn-m" asp-action="Delete" asp-route-id="@item.IdBaleros">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tabla').DataTable();
        });
    </script>
}